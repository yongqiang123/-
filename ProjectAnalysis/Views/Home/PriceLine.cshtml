       }).GetHtml()

        </td>
        <td>
            @Html.DevExpress().Button(m =>
            {
                m.Name = "btn";
                m.Text = "查询";
                m.ClientSideEvents.Click = "function(){setParameterValues();}";
            }).GetHtml()
        </td>
    </tr>
</table>
  </div> 
@Html.DevExpress().Dashboard(settings => {
    
