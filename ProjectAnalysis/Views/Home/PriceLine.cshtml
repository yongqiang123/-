<link href="~/Content/search.css" rel="stylesheet" />
<div >
<table style="margin-left:20%;">
    <tr>
        <td>
            <div class="sp">
            开始日期:
           </div>
        </td>
        <td>
            @Html.DevExpress().DateEdit(m =>
       {
           m.Name = "StartTime";
           m.Date = Convert.ToDateTime(ViewData["ST"]);

       }).GetHtml()

        </td>
        <td><div class="sp">结束日期:</div></td>
        <td>

            @Html.DevExpress().DateEdit(m =>
       {
